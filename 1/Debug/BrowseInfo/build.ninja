##IAR Ninja build file


#Rules
rule COMPILER_XCL
  command = H$:\IAR\common\bin\XclFileGenerator.exe $xclcommand -f "$rspfile_name"
  description = IAR_NEW_TOOL+++COMPILER_XCL+++$in+++H$:\IAR\common\bin\XclFileGenerator.exe $flags
  rspfile = $rspfile_name
  rspfile_content = $flags

rule INDEXER
  command = H$:\IAR\common\bin\SourceIndexer.exe $flags
  depfile = $out.dep
  description = IAR_NEW_TOOL+++INDEXER+++$out+++H$:\IAR\common\bin\SourceIndexer.exe $flags

rule MAKEBROWSE
  command = H$:\IAR\common\bin\makeBrowseData.exe $flags
  description = IAR_NEW_TOOL+++MAKEBROWSE+++$out+++H$:\IAR\common\bin\makeBrowseData.exe $flags

rule PDBLINK
  command = H$:\IAR\common\bin\PbdLink.exe $flags
  description = IAR_NEW_TOOL+++PDBLINK+++$out+++H$:\IAR\common\bin\PbdLink.exe $flags



#Build steps
build H$:\projects\Debug\BrowseInfo\main.xcl : COMPILER_XCL 
  xclcommand = -source_file H$:\projects\main.c -xcl_file H$:\projects\Debug\BrowseInfo\main.xcl -macro_file H$:\projects\Debug\BrowseInfo\main.tmp -icc_path H$:\IAR\arm\bin\iccarm.exe
  flags = H$:\projects\main.c -D STM32F407xx -o H$:\projects\Debug\Obj\ --no_cse --no_unroll --no_inline --no_code_motion --no_tbaa --no_clustering --no_scheduling --debug --endian=little --cpu=Cortex-M4 -e --fpu=VFPv4_sp --dlib_config H$:\IAR\arm\inc\c\DLib_Config_Normal.h -Ol -I H$:\IAR\arm\CMSIS\Core\Include\ -I H$:\IAR\arm\CMSIS\DSP\Include\ --predef_macros H$:\projects\Debug\BrowseInfo\main.tmp
  rspfile_name = H$:\projects\Debug\BrowseInfo\main.xcl.rsp

build H$:\projects\Debug\BrowseInfo\main.pbi : INDEXER H$:\projects\Debug\BrowseInfo\main.xcl |  $
H$:\projects\main.c
  flags = -out=H$:\projects\Debug\BrowseInfo\main.pbi -f H$:\projects\Debug\BrowseInfo\main.xcl

build H$:\projects\Debug\BrowseInfo\1.pbw : MAKEBROWSE H$:\projects\Debug\BrowseInfo\1.pbd
  flags = H$:\projects\Debug\BrowseInfo\1.pbd -output H$:\projects\Debug\BrowseInfo\1.pbw

build H$:\projects\Debug\BrowseInfo\1.pbd : PDBLINK H$:\projects\Debug\BrowseInfo\main.pbi
  flags = -M H$:\projects\Debug\BrowseInfo\1.pbd H$:\projects\Debug\BrowseInfo\main.pbi

